<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.modyapp.app.Fragments.HeaderControls">

    <TextView
            android:id="@+id/player_song_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_current_position"
            android:layout_below="@+id/player_song_number"
            android:minWidth="220dip"
            android:layout_centerHorizontal="true"
           />
    <!--<TextView
            android:id="@+id/player_played_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/player_song_number"
            android:layout_alignParentStart="true"
            />-->
</RelativeLayout>